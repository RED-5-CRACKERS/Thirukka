def opt():
    print(u"""
\u001b[32;1m [\u001b[31;1m1\u001b[32;1m]. Question type wordlist generator
\u001b[32;1m [\u001b[31;1m2\u001b[32;1m]. User input possiblitys wordlist generator
\u001b[32;1m [\u001b[31;1mQ\u001b[32;1m]. Quit
\u001b[32;1m [\u001b[31;1m?\u001b[32;1m]. Help
            """)
    try:
        while True:
            option=input(u"\u001b[32;4;1mThirukka\u001b[0m> ")
            if option == "1":
                try:
                    print(u'\u001b[32;4;1mThirukka\u001b[0m(\u001b[31;1m1/...\u001b[36;1m')
                    ques()
                except:
                    print(sys.exc_info())
            elif option == "2":
                upass()
            elif option == "q" or option == "Q":
                exit()
            elif option == "ls":
                print(u"\u001b[0m----------------------------------------")
                try:
                    os.system("ls -1sh")
                except:
                    os.system("dir")
                print(u"\u001b[0m----------------------------------------")
            elif option == "pwd":
                print(u"\u001b[0m----------------------------------------")
                try:
                    os.system("pwd")
                except:
                    print("Sorry only in linux")
                print(u"\u001b[0m----------------------------------------")
            elif option == "clear":
                print(u"\u001b[0m----------------------------------------")
                try:
                    os.system("clear")
                except:
                    print(u"\u001b[0m----------------------------------------")
                    print("Sorry only in linux")
                    print(u"\u001b[0m----------------------------------------")
            elif option == "?":
                print(u"""\u001b[32;1m+--------------------------------------------------------------+
|                            HELP                              |
+--------------+---------+-------------------------------------+
|    Title     | Command |          Discryption                |
+--------------+---------+-------------------------------------+
|              |    1    | Interview Type wordlist generater   |
| Tool command |    2    | Charectors all passiblities         |
|              |    ?    | This banner                         |
+--------------+---------+-------------------------------------+
|              |   ls    | List directory contents             |
|System command|   pwd   | Print current working directory     |
|              |  clear  | Clear Terminal                      |
+--------------+---------+-------------------------------------+
| Exit command |  Q or q | Quit                                |
+--------------+---------+-------------------------------------+\u001b[0m """)
            elif option == "":
                pass
            else:
                print("Ooops!,  '{}' Not Found.Try '?'  ".format(option))
    except:
        pass
