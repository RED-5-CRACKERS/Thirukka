def upass():
    try:
        line=0
        chars=""
        min_=""
        max_=""
        while chars == "":
            chars=input(u'\u001b[32;4;1mThirukka\u001b[0m(\u001b[31;1m2/charectors\u001b[0m)> \u001b[0m')
        while min_ == "":
            try:
                min_=int(input(u'\u001b[32;4;1mThirukka\u001b[0m(\u001b[31;1m2/\u001b[31;4;1mMIN\u001b[0m\u001b[31;1mimum_length\u001b[0m)> \u001b[0m'))
            except:
                pass
        while max_ == "":
            try:
                max_=int(input(u'\u001b[32;4;1mThirukka\u001b[0m(\u001b[31;1m2/\u001b[31;4;1mMAX\u001b[0m\u001b[31;1mimum_length\u001b[0m)> \u001b[0m'))
            except:
                pass
        if min_ > max_:
            min_=""
            max_=""
            print(u'\u001b[31;1mMINIMUM VALUE MUTS BE SMALLER THEN MAXIMUM VALUE')
            upass()
        up=input(u"\u001b[33;1mUppercase comitement ? ")
        f=input(u'\u001b[32;4;1mThirukka\u001b[0m(\u001b[31;1m2/filename:wordlist.txt\u001b[0m)> \u001b[36;1m')
        if f == '':
            f="wordlist.txt"
        ff=f
        f = open(f, 'a')
        fc=0
        chars=list(chars)
        chars2=set()
        uniq=[]
        for xuniq in chars:
            if xuniq not in chars2:
                uniq.append(xuniq)
                chars2.add(xuniq)
        chars2=list(chars2)
        XX=""
        for xuniq in range(0,len(chars2)):
            XX+=chars2[xuniq]
        dup=len(chars)-len(XX)
        for n in range(min_,max_ + 1):
            for i in itertools.product(XX, repeat=n):
                line+=1
                num=line
                a = ''.join(i)
                if up == 'y' or up == 'Y' or up == "yes" or up == "Yes":
                    c=a.upper()
                    e=a.capitalize()
                    f.write("%s\n" % e)
                    f.write("%s\n" % c)
                d=a
                f.write("%s\n" % d)
                if fc == 13532:
                    lis=["↓","•","↑","↑","↑","↓","↑"]
                    ran=random.choice(lis)
                    print(u"\u001b[36;1m ",ran,"\u001b[32;4;1mGenerating\u001b[0m【\u001b[36;1m",len(a),"\u001b[0m】【\u001b[36;4;1m{}\u001b[0m】".format(a)+"\r",end="")
                    fc=0
                else:
                    fc+=1
                sys.stdout.flush()
        f.close()
        if up == "y" or up == "Y" or up == "yes":
            line*=3
        lis=[ff,str(line),str(dup)]
        print(u'\u001b[32;1m[\u001b[31;1m*\u001b[32;1m] Successfully Completed                          ')
        print(u"\u001b[32;1m+-----------------------+---------------------------+-----------------+")
        print(u"| Name of the wordlist  |Total Number of Lines Added|Ignored duplicate|")
        print(u"+-----------------------+---------------------------+-----------------+")
        print(u"| \u001b[37;1m",lis[0]," "*(19-len(lis[0])),"\u001b[32;1m| \u001b[37;1m",
                lis[1]," "*(23-len(lis[1])),"\u001b[32;1m|\u001b[37;1m",
                " ",lis[2]," "*(12-len(lis[2])),"\u001b[32;1m|")
        print(u"+-----------------------+---------------------------+-----------------+\u001b[0m")
    except:
        print(u'\u001b[31;1m                  *******                                  \u001b[0m')
        print(sys.exc_info())
        print(u"\u001b[0m")        
opt()
